#fullHomeBack
  width: 100%
  height: 100%
  background-size:cover
  background: url('/images/homepageBackground.jpg') no-repeat center center fixed;
#fullHomeBack:after
  box-shadow: insent 0 0 25em #000
  position: absolute
  top 0
  left 0
  width: 100%
  height: 100%
  z-index: 2
  content: ""

.titleContainer
  position:absolute
  top:20px
  left:0
  font-family:Quicksand
  font-weight:300
  max-height: 90%

.description-texts
  padding-top 50px
  text-align center
.site-slogan
  font-size: 48px;
  color #fff
  font-weight 300
  text-transform uppercase
  color #505050
.site-slogan span
  background: #fff
  background: rgba(255,255,255,.9)
  display: inline;
  display: inline-block;
  line-height: 53px;
  margin-bottom: 3px;
  padding: 40px 30px;

.app-description span
  color:white
  font-family: "Open Sans", sans-serif
  background: rgba(43,43,43,.9);
  display: inline-block;
  margin-bottom: 2px;
  padding: 10px 10px;

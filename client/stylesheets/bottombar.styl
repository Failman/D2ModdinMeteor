.statusBar
  position fixed
  bottom 0
  left 0
  width 100%
  height 50px
  background-color rgb(0, 163, 255)
  box-shadow 0 0 30px 0px rgba(0, 204, 255, 0.46)
  line-height 50px
  font-family Lato
.statusBar .left
  width: 50%
  height: 50px
  font-size 2.5em
  color white
  margin-left 10px
.statusBar .left .status
  font-size 20px
  position relative
  bottom 3px
  font-weight 400
.statusBar .rightButtons
  text-align right
  width: 20%
  height: 50px
  position absolute
  right 5px
  line-height 50px
  bottom 0
